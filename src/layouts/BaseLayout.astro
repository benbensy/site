---
import BaseHead from '@/components/BaseHead.astro'
import Footer from '@/components/Footer.astro'
import Header from '@/components/Header.astro'
import ToTop from '@/components/ToTop.astro'
import '@/styles/global.css'
---

<html lang="en">
  <head>
    <BaseHead />
  </head>
  <body>
    <div id="root">
      <Header />
      <div class="main-content">
        <slot />
      </div>
      <Footer />
    </div>
    <ToTop />
  </body>
</html>

<style>
  #root {
    @apply bg-white/85 overflow-auto flex flex-col justify-between w-full h-full bg-white/90 overflow-auto;
  }

  .main-content {
    @apply flex-1;
  }
</style>
