---
import { Icon } from 'astro-icon/components'
---

<footer class="footer">
  <div class="footer-content">
    <div class="footer-links">
      <a href="https://beian.miit.gov.cn/" target="_blank" rel="noopener noreferrer" class="footer-link">
        刘ICP备114514191号-8
      </a>
      <a
        href="https://github.com/benbensy/astro-template-oxidane"
        target="_blank"
        rel="noopener noreferrer"
        class="footer-link"
        aria-label="GitHub"
      >
        <Icon name="fa6-brands:github" />
        <span>Oxidane</span>
      </a>
    </div>
  </div>
</footer>

<style>
  .footer {
    @apply w-full py-4 border-t border-gray-100 dark:border-gray-800 bg-white/50 backdrop-blur-sm flex-shrink-0;
  }

  .footer-content {
    @apply max-w-7xl mx-auto px-4 py-8 sm:px-6 lg:px-8;
  }

  .footer-links {
    @apply flex flex-col sm:flex-row items-center justify-center flex-wrap gap-3 sm:gap-6 text-center;
  }

  .footer-link {
    @apply inline-flex items-center gap-2 text-sm text-gray-600 hover:text-gray-900 transition-colors font-medium;
  }

  .footer-link:hover {
    @apply text-sky-600 underline underline-offset-2 underline-dotted;
  }

  .footer-link svg {
    @apply w-5 h-5 flex-shrink-0;
  }
</style>
