---
import type { HTMLAttributes } from 'astro/types'

type Props = HTMLAttributes<'div'> & {
  title: string
  subtitle?: string
}

const { title, subtitle, class: className, ...props } = Astro.props
---

<div class:list={['banner', className]} {...props}>
  <div class="banner-content">
    <h1 class="banner-title">{title}</h1>
    {subtitle && <p class="banner-subtitle">{subtitle}</p>}
  </div>
</div>

<style>
  .banner {
    @apply w-full py-12 md:py-18 px-4 text-center;
  }

  .banner-content {
    @apply max-w-4xl mx-auto;
  }

  .banner-title {
    @apply text-3xl md:text-5xl font-bold mb-4;
    font-family: 'Comic Neue', cursive;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
  }

  .banner-subtitle {
    @apply text-xl md:text-2xl text-gray-700 mt-4;
    font-family: 'Comic Neue', cursive;
  }
</style>
